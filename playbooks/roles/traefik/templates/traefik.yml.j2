# Traefik v3.0 static configuration

entryPoints:
  web:
    address: ":80"
  websecure:
    address: ":443"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: proxy

  file:
    filename: /etc/traefik/dynamic.yml
    watch: true

api:
  dashboard: true
  insecure: false

log:
  level: INFO

accessLog: {}

certificatesResolvers:
  cloudflare:
    acme:
      email: admin@pearsalls.online
      storage: /acme.json
      dnsChallenge:
        provider: cloudflare
