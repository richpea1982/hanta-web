# Static Traefik configuration (v3)
global:
  checkNewVersion: false
  sendAnonymousUsage: false

log:
  level: INFO

accessLog: {}

api:
  dashboard: true

entryPoints:
  web:
    address: ":80"
  websecure:
    address: ":443"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: "{{ traefik_network }}"
  file:
    filename: "/etc/traefik/dynamic.yml"
    watch: true

certificatesResolvers:
  cf:
    acme:
      email: "{{ traefik_acme_email }}"
      storage: "{{ traefik_acme_storage }}"
      dnsChallenge:
        provider: cloudflare
        # Traefik reads CLOUDFLARE_API_TOKEN from the environment file you mounted
        resolvers:
          - "1.1.1.1:53"
          - "1.0.0.1:53"
