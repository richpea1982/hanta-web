services:
  traefik:
    image: traefik:latest
    container_name: traefik
    restart: always
    env_file:
      - {{ traefik_env_file }}
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /opt/traefik/traefik.yml:/traefik.yml
      - /opt/traefik/dynamic.yml:/dynamic.yml
      - {{ traefik_acme_storage }}:{{ traefik_acme_storage }}
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - {{ traefik_network }}
      - proxy   # <-- add this line

networks:
  {{ traefik_network }}:
    external: true

